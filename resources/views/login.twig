<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>{% block title '' %}FromSelect</title>
        <link rel="stylesheet" href="{{ base_url() }}/assets/style.css">
    </head>
    <body class="login-body">
        <section class="login">
            <header class="header no-a">
                <h1><span>From</span>Select</h1>
            </header>
            <form action="{{ path_for('connection.auth') }}" method="post">
                {% if error is not empty %}
                    <p class="error">{{ error }}</p>
                {% endif %}
                <div class="columns">
                    <div class="host-group">
                        <label for="host">Host</label>
                        <input type="text" name="host" id="host" placeholder="I.e. localhost" required>
                    </div>
                    <div class="port-group">
                        <label for="port">Port</label>
                        <input type="text" name="port" id="port" value="3306" required>
                    </div>
                </div>
                <label for="username">Username</label>
                <input type="text" name="username" id="username" placeholder="I.e. root" required>
                <label for="password">Password</label>
                <input type="password" name="password" id="password">
                <input type="submit" value="Connect">
            </form>
        </section>
    </body>
</html>
